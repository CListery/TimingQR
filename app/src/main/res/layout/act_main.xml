<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yh.timingqrviewlib.TimingQRView
        android:id="@+id/mTimingQrView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/mTimingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTimingQrView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#212325"
        android:textSize="25dp"
        tools:text="5ç§’" />

    <TextView
        android:id="@+id/mNoticeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTimingTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#212325"
        android:textSize="13dp" />

    <ProgressBar
        android:id="@+id/mLoading"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center" />

</RelativeLayout>